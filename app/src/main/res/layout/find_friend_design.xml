<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_margin="10dp"
    android:elevation="20dp">
    <RelativeLayout
        android:id="@+id/rl_design"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:background="@drawable/cardview_border">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_notification"
            android:layout_width="100dp"
            android:src="@drawable/profile_image"
            android:layout_height="100dp"
            android:layout_margin="15dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_notification"
            android:padding="10dp">
            <TextView
                android:id="@+id/name_notification"
                android:text="User_Name"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/bio_notification"
                android:text="User_Bio"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/name_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/accept_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Accept"
                android:visibility="visible"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:background="@drawable/accept_btn"/>

            <Button
                android:id="@+id/decline_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/accept_btn"
                android:background="@drawable/decline_btn"
                android:text="Decline"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>